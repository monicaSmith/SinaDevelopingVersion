<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //pic
    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/a"
        android:id="@+id/user_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    //user-name
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/user_pic"
        android:text="name"
        android:textSize="20dp"
        android:textColor="#f00"
        android:id="@+id/user_name_home"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    //sent weibo time
    <TextView
        android:layout_marginTop="10dp"
        android:text="sent_weiibo_time"
        android:layout_toRightOf="@+id/user_pic"
        android:id="@+id/sent_weibo_time"
        android:layout_below="@id/user_name_home"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    //sources
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="sources"
        android:layout_toRightOf="@+id/sent_weibo_time"
        android:id="@+id/sources"
        android:layout_below="@id/user_name_home"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    //webo_text
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/weibo_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="weibo_text"
        android:layout_below="@+id/user_pic"
        />
    //reposts
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:src="@drawable/a"
        android:layout_below="@+id/weibo_text"
        android:id="@+id/reposts_pic"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Reposts"
        android:layout_toRightOf="@+id/reposts_pic"
        android:id="@+id/reposts"
        android:layout_below="@id/weibo_text"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        />
    //comments
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/comments_pic"
        android:src="@drawable/b"
        android:layout_below="@+id/weibo_text"
        android:layout_toRightOf="@+id/reposts"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/comments_pic"
        android:id="@+id/comments_text"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="Comments"
        android:layout_below="@+id/weibo_text"
        />
    //likes
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/likes_pc"
        android:src="@drawable/c"
        android:layout_below="@+id/weibo_text"
        android:layout_toRightOf="@+id/comments_text"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/likes_pc"
        android:id="@+id/likes_text"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="likes_number"
        android:layout_below="@+id/weibo_text"
        />

</RelativeLayout>